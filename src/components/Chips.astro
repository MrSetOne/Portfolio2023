---
interface Props{
  chips:string[]
}

const {chips} = Astro.props

---

{chips.map((chip) => (
  <div class="chip">
    {chip}
  </div>
))}

<style lang="scss">
  .chip {
    display: inline-block;
    padding: .5rem 1rem;
    font-size: 16px;
    border-radius: 15rem;
    background-color: #f1f1f12e;
  }
</style>

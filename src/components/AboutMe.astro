---
import Chips from "./Chips.astro";
import StandardArticle from "./StandardArticle.astro";
import me from '../assets/aboutMe.png'
import { Image } from "astro:assets";
import Training from "./Training.astro";
import Github from "./icons/Github"
import Linkedin from "./icons/Linkedin";
import Controller from "./icons/Controller";
import FatCap from "./icons/FatCap";
import Gpu from "./icons/Gpu";
import Camera from "./icons/Camera";

---
<StandardArticle span={{col:2}} >
  <div class="aboutMe">
    <div class="aboutMe__text">
      <h2>Sobre mi</h2>
      <p><b>Frontend</b> developer con conocimientos de <b>UX/UI</b> y <b>backend</b>. Mi stack tecnológico principal es <b>React, MongoDB y NodeJS</b>, aunque nunca digo que no a aprender nuevas tecnologias y frameworks. ¿Quien dijo miedo?</p>
      <div class="aboutMe__chips" >
        <Chips chips={
          [
            'Detallista',
            'Team player',
            'Creativo',
            'Organizado',
            'Autodidacta',
            'Implicado',
            'Comunicativo',
            'Curioso'
          ]
        }/>
      </div>
      </div>
    <Image src={me} alt="Michael Lara Sánchez" class="aboutMe__image" width={500} />
  </div>
</StandardArticle>
<StandardArticle isBtn isSquare>
  <a href="https://github.com/MrSetOne" target="_blank" class="gitHub">
    <Github client:load />
    <span>Visita mi perfil de</span>
    <h2>GitHub</h2>
  </a>
</StandardArticle>
<div class="hobbies">
  <StandardArticle isBtn isSquare isCircle>
    <a href="#">
      <Controller size="8rem" client:load />
      <span>Videojuegos</span>
    </a>
  </StandardArticle>
  <StandardArticle isBtn isSquare isCircle>
    <a href="#">
      <FatCap size="8rem" client:load />
      <span>Arte urbano</span>
    </a>
  </StandardArticle>
  <StandardArticle isBtn isSquare isCircle>
    <a href="#">
      <Gpu size="8rem" client:load />
      <span>Hardware</span>
    </a>
  </StandardArticle>
  <StandardArticle isBtn isSquare isCircle>
    <a href="#">
      <Camera size="8rem" client:load />
      <span>Fotografia</span>
    </a>
  </StandardArticle>
</div>
<StandardArticle span={{col:2,row:2}} >
  <div class="training">
    <h2>Formación</h2>
    <Training/>
  </div>
</StandardArticle>
<StandardArticle isBtn isSquare>
  <a href="https://github.com/MrSetOne" target="_blank" class="linkedIn">
    <Linkedin client:load />
    <span>Conecta conmigo en</span>
    <h2>Linkedin</h2>
  </a>
</StandardArticle>

<style lang="scss">

  .aboutMe{
    position: relative;
    .aboutMe__text{
      width: calc(100% - 20rem);
      display: flex;
      flex-direction: column;
      gap:1.3rem;
      h2{
        color:#FCA311;
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
      }
    }
    .aboutMe__image{
      height: 37rem;
      width: auto;
      position: absolute;
      right: -21%;
      top:-10%;
    }
    .aboutMe__chips{
      display: flex;
      flex-wrap: wrap;
      gap: .5rem;
    }
  }

  .gitHub, .linkedIn{
    height: 100%;
    text-decoration: none;
    color:white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    span{
      margin-top: 1rem;
    }
    h2{
      color:#FCA311;
      font-size: 2.25rem;
    }
  }

  .hobbies{
    display: grid;
    grid-template-columns: repeat(2,1fr);
    grid-template-rows: repeat(2,1fr);
    gap:1rem;
    a{
      color: white;
      text-decoration: none;
      display: flex;
      gap: .5rem;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100%; 
      font-weight:700 ;
    }
  }

  .training{
    display: flex;
    flex-direction: column;
    gap: 3rem;
    align-items: center;
    justify-content: center;
    height: 100%;
    padding: 0rem 2rem;
    h2{
      font-size: 4rem;
      padding: 1.2rem .6rem;
      border: .7rem solid white;
      text-transform: uppercase;
      color:#FCA311;
    }
  }

</style>
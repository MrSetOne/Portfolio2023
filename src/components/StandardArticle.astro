---

interface Props{
  span?:{
    col?: number,
    row?: number,
  }
}

const defaultSpan = {
  col: 1,
  row: 1,
}

const { span=defaultSpan } = Astro.props;
const { col, row } = span;

const style = `grid-column: span ${col}; grid-row: span ${row};`


---

<article style={style} >
  <slot/>
</article>
<style lang="scss">
  article{
    background-color: #334a7963;
    border: 1px solid #62769F;
    border-radius: 1.25rem;
    color: white;
    padding:1.875rem;
  }
</style>




---

interface Props{
  span?:{
    col?: number,
    row?: number,
  }
  isBtn?: boolean,
  isSquare?: boolean,
  isCircle?: boolean,
}

const defaultSpan = {
  col: 1,
  row: 1,
}

const { span=defaultSpan, isBtn=false, isSquare=false , isCircle=false} = Astro.props;
const { col=1, row=1 } = span;

const gridStyle = `grid-column: span ${col}; grid-row: span ${row};`
const paddingStyle = !isBtn ? 'padding: 1.9rem;' : '';
const squareStyle = isSquare ? 'aspect-ratio:1/1;' : '';
const circleStyle = isCircle ? 'border-radius: 50%;' : 'border-radius: 1.25rem;';
const style = gridStyle + paddingStyle + squareStyle + circleStyle;

---

<article style={style} >
  <slot/>
</article>
<style lang="scss">
  article{
    overflow: hidden;
    background-color: #334a7963;
    border: 1px solid #62769F;
    color: white;
    backdrop-filter: blur(4px);
    box-shadow: #00000070 0px 5px 13px 0px
    ;
  }
</style>




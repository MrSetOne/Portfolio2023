---
import { Image } from "astro:assets";
import code from "../assets/code.webp";
import Github from "./icons/Github";
import Linkedin from "./icons/Linkedin";
import Mail from "./icons/Mail";
---
<article class="contact">
  <div class="contact__main">
    <h2 class="contact__title">¡Hablemos!</h2>
    <slot/>
    <div class="contact__others" >
      <div class="contact__othersText">
        <div/>
        <span>También puedes contactarme en:</span>
        <div/>
      </div>
      <div class="contact__icons">
        <a target="_blank" href="https://github.com/MrSetOne">
          <Github client:load size="2rem" />
        </a>
        <a target="_blank" href="#https://www.linkedin.com/in/michaellaras/">
          <Linkedin client:load size="2rem" />
        </a>
        <a target="_blank" href="mailto:lara.sanchez.michael@gmail.com">
          <Mail client:load size="2rem"/>
        </a>
      </div>
    </div>
  </div>
  <div class="contact__aside">
    <span>{"</>"}</span>
    <Image src={code} height={600} alt='code' />
  </div>
</article>

<style lang="scss">
  .contact{
    margin-top: 4rem;
    box-shadow: #00000070 0px 5px 13px 0px;
    overflow: hidden;
    border-radius: 1.25rem;
    background-color: #0d121d;
    display: flex;
    grid-column: span 3;
    @media screen and (max-width: 1100px) {
      grid-column: span 2;
    }

    @media screen and (max-width: 1000px) {
      flex-direction: column-reverse;
    }
      
    



    .contact__main{
      box-sizing: border-box;
      padding: 10rem;
      width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      @media screen and (max-width: 1000px) {
        padding:  5rem 0;
        width: min(90%, 40rem);
        margin: 0 auto;
      }
      >h2{
        font-size: min(4rem, 9vw);
        padding: 1.2rem .6rem;
        border: .7rem solid white;
        text-transform: uppercase;
        color:#FCA311;
        @media screen and (max-width:400px) {
          border: none;
          color: white;
        }
      }
      >.contact__others{
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        >.contact__othersText{
          width: 100%;
          display: flex;
          align-items: center;
          >div{
            flex: 1;
            height: .1rem;
            background-color: white;
            @media screen and (max-width: 500px) {
              display: none;
            }
          }
          >span{
            font-size: 1rem;
            color: white;
            padding: 0 1rem;
            @media screen and (max-width: 500px) {
              display: block;
              width: 100%;
              text-align: center;
            }
          }
        }
        .contact__icons{
          display: flex;
          justify-content: center;
          align-items: center;
          gap:5rem;
          @media screen and (max-width: 500px) {
            width: min(100%, 16rem);
            gap:0;
            justify-content: space-between;
          }
        }
      }
    }
    .contact__aside{
      box-shadow: inset 0px 0px 55px 0px rgba(0,0,0,0.75);
      z-index: 3;
      // flex: 1;
      width: 33rem;
      position: relative;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      @media screen and (max-width: 1000px) {
        display: none;
        width: 100%;
        height: min-content;
        padding: 1rem 0;
      }
      >img{
        position: absolute;
        width: 150%;
        height: 150%;
        object-fit: cover;
        z-index: 0;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        filter: blur(.2rem); 
      }
      >span{
        text-shadow: 0px 0px 10px #000000;
        position: relative;
        color: white;
        z-index: 2;
        font-weight: 800;
        font-size: clamp(7rem, 12vw, 10rem);
      }
    }
  }
</style>





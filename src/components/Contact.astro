---
import { Image } from "astro:assets";
import code from "../assets/code.jpg";
import Github from "./icons/Github";
import Linkedin from "./icons/Linkedin";
import Mail from "./icons/Mail";
---
<article class="contact">
  <div class="contact__main">
    <h2 class="contact__title">¡Hablemos!</h2>
    <slot/>
    <div class="contact__others" >
      <div class="contact__othersText">
        <div/>
        <span>También puedes contactarme en:</span>
        <div/>
      </div>
      <div class="contact__icons">
        <Github client:load size="2rem" />
        <Linkedin client:load size="2rem" />
        <Mail client:load size="2rem"/>
      </div>
    </div>
  </div>
  <div class="contact__aside">
    <span>{"</>"}</span>
    <Image src={code} height={600} alt='code' />
  </div>
</article>

<style lang="scss">
  .contact{
    margin-top: 4rem;
    box-shadow: #00000070 0px 5px 13px 0px;
    overflow: hidden;
    border-radius: 1.25rem;
    background-color: #0d121d;
    display: flex;
    grid-column: span 3;
    .contact__main{
      padding: 10rem;
      width: calc(40rem);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      >h2{
        font-size: 4rem;
        padding: 1.2rem .6rem;
        border: .7rem solid white;
        text-transform: uppercase;
        color:#FCA311;
      }
      >.contact__others{
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        >.contact__othersText{
          width: 100%;
          display: flex;
          align-items: center;
          >div{
            flex: 1;
            height: .1rem;
            background-color: white;
          }
          >span{
            font-size: 1rem;
            color: white;
            padding: 0 1rem;
          }
        }
        .contact__icons{
          display: flex;
          justify-content: center;
          align-items: center;
          gap:5rem;
        }
      }
    }
    .contact__aside{
      box-shadow: inset 0px 0px 55px 0px rgba(0,0,0,0.75);
      z-index: 3;
      flex: 1;
      position: relative;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      >img{
        position: absolute;
        width: 150%;
        height: 150%;
        object-fit: cover;
        z-index: 0;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        filter: blur(.2rem); 
      }
      >span{
        text-shadow: 0px 0px 10px #000000;
        position: relative;
        color: white;
        z-index: 2;
        font-weight: 800;
        font-size: 10rem;
      }
    }
  }
</style>




